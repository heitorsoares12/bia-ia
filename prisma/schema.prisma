generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ConversationStatus {
  OPEN
  CLOSED
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

model Visitor {
  id          String         @id @default(uuid())
  nome        String
  email       String
  cnpj        String?
  cargo       String?
  areaAtuacao String?
  interesse   String?
  conversations Conversation[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

model Conversation {
  id           String             @id @default(uuid())
  visitorId    String
  threadId     String?
  status       ConversationStatus @default(OPEN)
  startedAt    DateTime
  endedAt      DateTime?
  lastActivity DateTime?          @default(now())
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  visitor      Visitor            @relation(fields: [visitorId], references: [id])
  messages     Message[]

  @@index([visitorId])
  @@index([createdAt])
  @@index([lastActivity])
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  role           MessageRole
  content        String
  timestamp      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId])
  @@index([timestamp])
}

model User {
  id          Int      @id @default(autoincrement())
  nome        String
  email       String
  cnpj        String
  empresa     String?
  cargo       String
  cargoOutro  String?
  area        String
  areaOutro   String?
  interesse   String
  createdAt   DateTime @default(now())
}